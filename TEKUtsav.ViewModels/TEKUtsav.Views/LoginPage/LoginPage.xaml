<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
		xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:d="clr-namespace:TEKUtsav.UIControls.Controls;assembly=TEKUtsav.UIControls"
		x:Class="TEKUtsav.Views.LoginPage.LoginPage">
    <d:GradientColorStack StartColor="#f23e56" EndColor="#971024">
       <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
            <Image WidthRequest="200" HeightRequest="200" Source="logo.png" Aspect="AspectFit">
            </Image>
       </StackLayout>

        <StackLayout VerticalOptions="End" Orientation="Horizontal">
            <ContentView Padding="20,30,20,30" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                <d:CustomButton Command="{Binding StartCommand}" IsWhiteBtn="true" BorderRadius="20" FontSize="14" Text="START EXPLORING NOW" BorderWidth="1" BorderColor="#FFFFFF" HorizontalOptions="FillAndExpand" FontAttributes="Bold" BackgroundColor="#FFFFFF" TextColor="#565758">
                </d:CustomButton>
            </ContentView>
        </StackLayout>
     </d:GradientColorStack>
</ContentPage>